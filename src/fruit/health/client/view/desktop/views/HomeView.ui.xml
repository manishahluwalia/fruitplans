<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
      @external table-style;
      .table-style {}
	</ui:style>

	<g:HTMLPanel>
	    <p>
	    Welcome to fruithealth. We help you compare your insurance plans to see how you fare under different scenarios.
	   </p>
	   <p ui:field="plansPara">
	    This is how much the plans will cost you over the year in various scenarios. Click on the name of a plan to edit it.
	    <g:FlexTable ui:field="table" styleName="{style.table-style}" />
	   </p>
	   <p>
	    <g:Anchor ui:field="enterPlan" styleName="button--heroku">
	    Click here to add a plan.
	   </g:Anchor>
	   </p>
	    	</g:HTMLPanel>
</ui:UiBinder> 