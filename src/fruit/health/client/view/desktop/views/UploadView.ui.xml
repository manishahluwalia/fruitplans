<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>		
	</ui:style>

    <g:HTMLPanel ui:field="wrapper" styleName="col-6-wrapper center-block">
        <!-- Description -->
        <div class="form-group  has-feedback  has-icon  icon-lg">
            <i class="solve-icon-document-search  form-control-icon  icon-white"></i>
            <input ui:field="description" type="text" placeholder="Description" autofocus="" required="" class="form-control  form-contorl-faded  input-lg ng-invalid ng-invalid-required"/>
        </div>
        <!-- Schema -->
        <!-- 
        <div class="form-group  has-feedback  has-icon  icon-lg">
            <i class="solve-icon-document-list  form-control-icon  icon-white"></i>
            <input ui:field="schema" type="text" placeholder="Schema (key:type,key:type...)" required="" class="form-control  form-contorl-faded  input-lg ng-invalid ng-invalid-required"/>
        </div>
        -->
        <div id="dropzone" style="height:100px" class="dropzone"/>
        <g:Button ui:field="submit" styleName="btn  btn-lg  btn-block  btn-faded-light" enabled="true"><ui:msg description="The text of the submit button for data upload">Upload</ui:msg></g:Button>
    </g:HTMLPanel>
</ui:UiBinder> 