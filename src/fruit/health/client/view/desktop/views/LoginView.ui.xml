<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		
	</ui:style>

<g:HTMLPanel ui:field="wrapper" styleName="col-6-wrapper center-block">
                <form name="form" onsubmit="return false;" class="ng-invalid ng-invalid-required ng-dirty">
                    <div class="login-error  text-white" hidden="true" ui:field="errorDiv">
                        <div class="media">
                            <i class="solve-icon-alert-triangle  icon-base  line-height-large  pull-left"></i>
                            <div class="media-body">
                                <span ui:field="error" class="ng-binding"></span>
                            </div>
                        </div>
                    </div>
                        <!-- email -->
                        <div class="form-group  has-feedback  has-icon  icon-lg">
                            <i class="solve-icon-at  form-control-icon  icon-white"></i>
                            <input ui:field="email" type="text" placeholder="Email Address" autofocus="" required="" class="form-control  form-contorl-faded  input-lg ng-invalid ng-invalid-required" name="login"/>
                        </div> <!-- email -->
                        <!-- password -->
                        <div class="form-group  has-feedback  has-icon  icon-lg">
                            <i class="solve-icon-key-hole  form-control-icon  icon-white"></i>
                            <input ui:field="password" type="password" placeholder="Password" class="form-control  form-contorl-faded  input-lg ng-invalid ng-invalid-required" required="" name="pass"/>
                        </div> <!-- password -->
                        <!-- btn -->
                        <g:SubmitButton ui:field="loginButton" styleName="btn  btn-lg  btn-block  btn-faded-light  auth-wrapper-btn" enabled="false">Log in to Mango</g:SubmitButton> <!-- btn -->
                        <small><p class="no-margin  text-white  text-center">Don't have an account? <a class="link-white" ui:field="signupLink">Signup!</a></p></small>
                    </form></g:HTMLPanel>


</ui:UiBinder> 