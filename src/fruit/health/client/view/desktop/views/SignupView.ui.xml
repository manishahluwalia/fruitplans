<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		
	</ui:style>

<g:HTMLPanel ui:field="wrapper" styleName="col-6-wrapper center-block">
                <form onsubmit="return false;" name="form" class="ng-pristine ng-invalid ng-invalid-required">
                    <div class="error ng-binding" hidden="true" ui:field="error"></div>
                    <!-- full name -->
                    <div class="form-group  has-feedback  has-icon  icon-lg">
                        <i class="solve-icon-user  form-control-icon  icon-white"></i>
                        <input ui:field="name" type="text" placeholder="Full Name" autofocus="" required=""  class="form-control  form-contorl-faded  input-lg ng-pristine ng-invalid ng-invalid-required" name="full-name"/>
                    </div> <!-- full name -->
                    <!-- email -->
                    <div class="form-group  has-feedback  has-icon  icon-lg">
                        <i class="solve-icon-at  form-control-icon  icon-white"></i>
                        <input ui:field="email" type="email" placeholder="Email Address" class="form-control  form-contorl-faded  input-lg ng-pristine ng-invalid ng-invalid-required ng-valid-email" required="" name="email"/>
                    </div> <!-- email -->
                    <!-- password -->
                    <div class="form-group  has-feedback  has-icon  icon-lg">
                        <i class="solve-icon-key  form-control-icon  icon-white"></i>
                        <input ui:field="password" type="password" placeholder="Password" ng-model="user.password" class="form-control  form-contorl-faded  input-lg ng-pristine ng-invalid ng-invalid-required" required="" name="password"/>
                    </div> <!-- password -->
                    <!-- btn -->
                    <g:SubmitButton ui:field="submit" styleName="btn  btn-lg  btn-block  btn-faded-light  auth-wrapper-btn" enabled="true">Sign Up with Mango</g:SubmitButton> <!-- btn -->
                    <small>
                        <p class="text-white  text-center  no-margin">Signing up to our Private Beta signifies that you have read and agree to our <g:Anchor ui:field="privacyPolicy">Privacy Policy</g:Anchor>.</p>
                        <p class="no-margin  text-white  text-center">Already have an account? <g:Anchor ui:field="login">Log in now.</g:Anchor></p>
                    </small>


                </form>
                <div hidden="true" class="sign-up-success  text-center ng-hide">
                    <h1 class="gamma  text-white"><i class="solve-icon-check-circle"></i></h1>
                    <h2 class="text-white">Thanks for signing up!</h2>
                    <h3 class="text-white">We're still in private beta, but we'll let you know when a spot opens.</h3>
                </div>
            </g:HTMLPanel>
 </ui:UiBinder> 